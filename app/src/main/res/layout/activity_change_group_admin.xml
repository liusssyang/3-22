<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@drawable/toolbar_ground" />

    <Toolbar
        android:id="@+id/manage_toolbar_sigText"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_ground"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/manage_back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:background="@drawable/back"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/manage_sigText_toolbarName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="更换群主"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>
    </Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:background="#f5f6fa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0"
            android:gravity="start|center_vertical"
            android:text="群组ID"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/et_group_id"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:background="#f5f6fa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0"
            android:gravity="start|center_vertical"
            android:text="新群主"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/et_username"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:background="#f5f6fa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0"
            android:gravity="start|center_vertical"
            android:text="appKey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/et_appKey"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:background="#f5f6fa" />

    <Button
        android:id="@+id/bt_change_group_admin"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_addnew_accept"
        android:text="移交群主"
        android:textColor="#ffffff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>