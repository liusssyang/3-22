<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conversation_dealing"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:background="@drawable/toolbar_ground"
        android:layout_height="24dp"/>
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_ground"
        android:id="@+id/manage_toolbar_sigText"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            >
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/manage_back"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/back"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                />
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="聊天记录"
                    android:gravity="center"
                    android:textColor="#ffffff"/>
                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="3dp"
                    android:id="@+id/manage_sigText_toolbarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="聊天记录"
                    android:gravity="center"
                    android:textColor="#ffffff"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/manage_message"
                android:background="@drawable/col_set_white"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"/>
        </RelativeLayout>
    </Toolbar>
    <TextView
        android:background="#ffffff"
        android:id="@+id/none"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="暂无聊天记录"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg_recycler_view"/>
    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/toolbar_ground"
            android:id="@+id/tv_info"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <EditText
        android:visibility="gone"
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="消息对象username"
        />
    <EditText
        android:visibility="gone"
        android:inputType="number"
        android:id="@+id/et_group_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="消息对象群组id"
        />

    <Button
        android:visibility="gone"
        android:background="@drawable/background_addnew_accept"
        android:id="@+id/bt_delete_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除会话中消息"
        />
    <Button
        android:visibility="gone"
        android:id="@+id/bt_single_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除单聊会话"
        />
    <Button
        android:visibility="gone"
        android:id="@+id/bt_group_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除群聊会话"
        />
    <Button
        android:visibility="gone"
        android:id="@+id/bt_get_conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询会话"/>
    <Button
        android:visibility="gone"
        android:id="@+id/bt_get_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询消息"
        />
    <Button
        android:visibility="gone"
        android:id="@+id/bt_get_latest_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取会话最新一条消息"
        />

</LinearLayout>
