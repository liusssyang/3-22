<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:background="@drawable/toolbar_ground"
        android:layout_height="24dp"/>
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_ground"
        android:id="@+id/manage_toolbar_sigText"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            >
            <TextView
                android:id="@+id/manage_back"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/back"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                />
            <TextView
                android:id="@+id/manage_sigText_toolbarName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="成员管理"

                android:gravity="center"
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/manage_re1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/manage_person_icon"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/icon_right_default"
                    />
                <RelativeLayout
                    android:id="@+id/personal_information"
                    android:layout_toRightOf="@+id/manage_person_icon"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:background="#00000000">
                    <TextView
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/manage_Name"
                        android:gravity="start|bottom"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/state"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="  "
                        android:gravity="center_vertical"
                        android:background="#ffffff"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="17dp"
                        />
                    <TextView
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:id="@+id/manage_simple_message"
                        android:layout_below="@+id/manage_Name"
                        android:maxLines="1"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/detail_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <View
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f6fa"/>

                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:text="账号"
                        android:gravity="start|center_vertical"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        />
                    <TextView
                        android:id="@+id/username"
                        android:layout_weight="5"
                        android:layout_width="90dp"
                        android:textSize="18sp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <View
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f6fa"/>
                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:text="用户ID"
                        android:gravity="start|center_vertical"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        />
                    <TextView
                        android:id="@+id/userid"
                        android:layout_weight="5"
                        android:layout_width="90dp"
                        android:textSize="18sp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <View
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f6fa"/>
                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:text="备注"
                        android:gravity="start|center_vertical"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        />
                    <TextView
                        android:id="@+id/note"
                        android:layout_weight="5"
                        android:layout_width="90dp"
                        android:textSize="18sp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <View
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f6fa"/>
                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:text="个性签名"
                        android:gravity="start|center_vertical"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        />
                    <TextView
                        android:id="@+id/signature"
                        android:layout_weight="5"
                        android:layout_width="90dp"
                        android:textSize="18sp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <View
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f6fa"/>
                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:text="出生日期"
                        android:gravity="start|center_vertical"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        />
                    <TextView
                        android:id="@+id/birthday"
                        android:layout_weight="5"
                        android:layout_width="90dp"
                        android:textSize="18sp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        />
                </LinearLayout>

                <View
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f6fa"/>
                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:text="地址"
                        android:gravity="start|center_vertical"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        />
                    <TextView
                        android:id="@+id/adress"
                        android:layout_weight="5"
                        android:layout_width="90dp"
                        android:textSize="18sp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <View
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f6fa"/>
                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:text="AppKey"
                        android:gravity="start|center_vertical"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        />
                    <TextView
                        android:id="@+id/appkey"
                        android:layout_weight="5"
                        android:layout_width="90dp"
                        android:textSize="18sp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <View
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f6fa"/>
                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:text="其他"
                        android:gravity="start|center_vertical"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        />
                    <TextView
                        android:id="@+id/other"
                        android:layout_weight="5"
                        android:layout_width="90dp"
                        android:textSize="18sp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f6fa" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:text="设置群昵称"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:text=">" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa" />
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:text="设置禁言"
                    android:id="@+id/no_speak"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:text=">" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa" />
            <RelativeLayout

                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/keeper"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:text="设置群管理员"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:text=">" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa" />
            <RelativeLayout

                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/change_group_admin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:text="移交群主"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:text=">" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#f5f6fa" />
            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa"/>


            <TextView
                android:background="@drawable/textview_state_pressed_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#F44336"
                android:id="@+id/mem_delete"
                android:text="把TA移出群聊"
                android:textSize="18sp"
                android:gravity="center"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="#f5f6fa"/>

        </LinearLayout>

    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f6fa"/>

</LinearLayout>