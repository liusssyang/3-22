<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="220dp"
    android:padding="15dp"
    android:background="@drawable/toolbar_ground"
    android:id="@+id/head"

    >
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/head_state"
        android:background="#ffffff"
        android:layout_toEndOf="@+id/head_appkey"
        android:layout_below="@+id/signature"
        android:layout_width="60dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:textSize="12sp"/>
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/head_appkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/head_vision"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:textColor="#70999999"
        android:textSize="14sp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_left_default"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/head_appkey"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/head_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/picture"
        android:text="admin"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#ffffff"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/picture"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signature"
        android:text="个性签名"
        android:textColor="#ffffff"
        android:layout_marginStart="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/head_username"
        android:layout_above="@+id/head_appkey"
        android:layout_toEndOf="@+id/picture"/>

</RelativeLayout>