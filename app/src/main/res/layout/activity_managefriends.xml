<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:background="@drawable/toolbar_ground"
        android:layout_height="24dp"/>
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_ground"
        android:id="@+id/manage_toolbar_sigText"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            >
            <TextView
                android:id="@+id/manage_back"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/back"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                />
            <TextView
                android:id="@+id/manage_sigText_toolbarName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="好友管理"

                android:gravity="center"
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/manage_re1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/manage_person_icon"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_right_default"
                />
            <RelativeLayout
                android:id="@+id/personal_information"
                android:layout_toRightOf="@+id/manage_person_icon"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:background="#00000000">
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/manage_Name"
                    android:gravity="start|bottom"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="  "
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp"
                    />
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/manage_simple_message"
                    android:layout_below="@+id/manage_Name"
                    android:maxLines="1"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/detail_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa"/>

            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:text="账号"
                    android:gravity="start|center_vertical"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/username"
                    android:layout_weight="5"
                    android:layout_width="90dp"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa"/>
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:text="用户ID"
                    android:gravity="start|center_vertical"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/userid"
                    android:layout_weight="5"
                    android:layout_width="90dp"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa"/>
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:text="备注"
                    android:gravity="start|center_vertical"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/note"
                    android:layout_weight="5"
                    android:layout_width="90dp"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa"/>
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:text="个性签名"
                    android:gravity="start|center_vertical"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/signature"
                    android:layout_weight="5"
                    android:layout_width="90dp"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa"/>
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:text="出生日期"
                    android:gravity="start|center_vertical"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/birthday"
                    android:layout_weight="5"
                    android:layout_width="90dp"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    />
            </LinearLayout>

            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa"/>
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:text="地址"
                    android:gravity="start|center_vertical"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/adress"
                    android:layout_weight="5"
                    android:layout_width="90dp"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa"/>
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:text="AppKey"
                    android:gravity="start|center_vertical"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/appkey"
                    android:layout_weight="5"
                    android:layout_width="90dp"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <View
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f6fa"/>
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:text="其他"
                    android:gravity="start|center_vertical"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/other"
                    android:layout_weight="5"
                    android:layout_width="90dp"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f6fa" />

        <RelativeLayout
            android:background="@drawable/textview_state_pressed_background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:id="@+id/manage_noteFriends"
                android:text="修改备注"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text=">"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp"
                />
        </RelativeLayout>
        <View
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f6fa"/>
        <RelativeLayout
            android:background="@drawable/textview_state_pressed_background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:id="@+id/manage_HistoryFriends"
                android:text="查找聊天记录"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text=">"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp"
               />
        </RelativeLayout>
        <View
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f6fa"/>
        <RelativeLayout
            android:background="@drawable/textview_state_pressed_background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:id="@+id/manage_disturb"
                android:text="消息免打扰"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"/>
            <Switch
                android:id="@+id/no_disturb"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:switchMinWidth="50dp"
                android:layout_marginEnd="17dp"
                android:gravity="center_vertical"
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <View
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f6fa"/>
        <RelativeLayout
            android:background="@drawable/textview_state_pressed_background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:id="@+id/manage_top"
                android:text="设为置顶"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text=">"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp"
                />
        </RelativeLayout>
        <View
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f6fa"/>
        <RelativeLayout
            android:background="@drawable/textview_state_pressed_background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:id="@+id/manage_message_notify"
                android:text="消息通知设置"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text=">"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f6fa" />

        <TextView
            android:background="@drawable/textview_state_pressed_background"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/colorQQ"
            android:id="@+id/manage_message_delete"
            android:text="删除聊天记录"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f6fa" />
        <TextView
            android:background="@drawable/textview_state_pressed_background"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#F44336"
            android:id="@+id/manage_friend_delete"
            android:text="删除好友"
            android:textSize="18sp"
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#f5f6fa"/>
    </LinearLayout>

    </ScrollView>


</LinearLayout>